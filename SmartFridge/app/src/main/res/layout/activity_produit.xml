<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:text="My Produit 1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageView
        android:id="@+id/im"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_imagecadre_black_24dp"
        android:layout_below="@+id/titre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Alertes"
        android:textSize="30dp"

        android:contextClickable="true"
        android:id="@+id/liste"
        android:layout_above="@+id/carac"

        />

    <TextView
        android:id="@+id/alertes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contextClickable="true"
        android:text="Code barres"
        android:textSize="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/carac"
        android:text="Retirer "
        android:textSize="30dp"
        android:contextClickable="true"
        android:layout_above="@+id/alertes"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorie:"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/datePremtionData"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date pÃ©remption:"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date ajout:"
        android:layout_above="@+id/liste"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="21dp" />

    <TextView
        android:id="@+id/categorieData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cat"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/im"
        android:layout_marginEnd="26dp" />

    <TextView
        android:id="@+id/datePremtionData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="datee"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/categorieData" />

    <TextView
        android:id="@+id/dateAjoutData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="datee"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/datePremtionData" />


</RelativeLayout>

