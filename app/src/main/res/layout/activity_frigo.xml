<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.mbds.appsmartfridge.ActivityFrigo">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="Refrig 1"
            android:textSize="28sp" />
        <ImageView
            android:id="@+id/imageFrigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_imagecadre_black_24dp"
            />
    </LinearLayout>
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="2"
    >
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:padding="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageTemp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_temperature"

                />
            <TextView
                android:id="@+id/tempData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temp"
                />
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:id="@+id/imageHumidite"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_humidite"/>
            <TextView
                android:id="@+id/humiditeData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="humid"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:padding="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageDecomposition"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_gradient_black"

                />
            <TextView
                android:id="@+id/decompositionData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="decomp"
                />

        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/fab_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imageStatus"
                android:layout_width="50dp"
                android:layout_height="40dp"

                android:src="@drawable/ic_status" />
            <TextView
                android:id="@+id/statusData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="satus"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:weightSum="3"
        android:orientation="vertical">
        <Button
            android:id="@+id/buttAlertes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alertes"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/butCaract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CaractÃ©ristiques" />

        <Button
            android:id="@+id/butProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produits" />
    </LinearLayout>
</LinearLayout>






</RelativeLayout>

