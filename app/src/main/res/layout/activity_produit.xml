                />
            <TextView
                android:id="@+id/datePremtionData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="datee"
                android:layout_marginTop="17dp"
                android:layout_marginStart="@dimen/fab_margin"
 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" android:weightSum="2">
            <TextView
                android:id="@+id/textViewDateAj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date ajout:"
                android:layout_marginTop="17dp"
                />

            <TextView
                android:id="@+id/dateAjoutData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="datee"
                android:layout_marginTop="17dp"
                android:layout_marginStart="@dimen/fab_margin"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/buttonRetirer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="42dp"
            android:text="Retirer"
            />
    </LinearLayout>
</LinearLayout>











</RelativeLayout>

