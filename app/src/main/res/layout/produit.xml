<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/produitImageID"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/produitPhoto"
        android:src="@drawable/ic_imagecadre_black_24dp"/>

    <TextView
        android:id="@+id/produitNom"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/produitImageID" />
    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:id="@+id/categorieProd"
        android:layout_below="@id/produitNom"
        android:layout_toEndOf="@id/produitImageID"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/dateAjoutProduit"
        android:layout_width="120dp"
        android:layout_height="41dp"
        android:layout_below="@id/categorieProd"
        android:layout_toEndOf="@id/produitImageID" />


</RelativeLayout>