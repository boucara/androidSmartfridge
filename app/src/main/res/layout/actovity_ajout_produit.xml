<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgProd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_imagecadre_black_24dp"
                />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:weightSum="4">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewNameProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom:"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="3.4"
                    />
                <EditText
                    android:id="@+id/titreProduit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="My Produit 1"
                    android:layout_marginStart="@dimen/fab_margin"
                     />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:weightSum="2">
                <TextView
                    android:id="@+id/textViewCatProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categorie:"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="5.2"
                    />
                <EditText
                    android:id="@+id/categorieDataProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cat"
                    android:layout_marginStart="@dimen/fab_margin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:weightSum="2">
                <TextView
                    android:id="@+id/textViewDatePrempt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date pÃ©remption:"
                    android:layout_marginTop="17dp"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    />
                <DatePicker
                    android:id="@+id/datePremtionDataPicker"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="datee"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="@dimen/fab_margin"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" android:weightSum="2">
                <TextView
                    android:id="@+id/textViewDateAjoutProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date ajout:"
                    android:layout_marginTop="17dp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    />
                <TextView
                    android:id="@+id/dateAjoutDataProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="datee"
                    android:layout_marginTop="17dp"
                    android:layout_marginStart="@dimen/fab_margin"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="40dp">
            <Button
                android:id="@+id/buttonScannerProduit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Scanner"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="2"
                />
            <Button
                android:id="@+id/buttonAjouterProduit"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Ajouter"
                />


        </LinearLayout>

    </LinearLayout>











</RelativeLayout>


