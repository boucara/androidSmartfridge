<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mbds.appsmartfridge.ActivityAccueil">

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_smartfrigo_large"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/parametres"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_settings"
        android:layout_marginBottom="75dp"
        android:layout_above="@+id/contactUs"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginStart="33dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_info"
        android:layout_marginBottom="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton" />

    <TextView
        android:id="@+id/frigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:text="Réfrigérateurs" />

    <TextView
        android:id="@+id/parametres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:text="Paramètres" />

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5"
        android:text="A propos" />

    <TextView
        android:id="@+id/contactUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nous contacter"
        android:layout_above="@+id/nousContacter"
        android:layout_alignStart="@+id/nousContacter" />

    <ImageButton
        android:id="@+id/nousContacter"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_contact_icon"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton4" />

</RelativeLayout>
