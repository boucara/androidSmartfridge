<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mbds.appsmartfridge">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityListeAlerte"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
		<activity
            android:name=".ActivityAccueil"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mbds.appsmartfridge.ActivityFrigos"
            android:parentActivityName="com.mbds.appsmartfridge.ActivityAccueil" />
        <activity
            android:name="com.mbds.appsmartfridge.ActivityProduits"
            android:parentActivityName="com.mbds.appsmartfridge.ActivityAccueil" />
        <activity
            android:name="com.mbds.appsmartfridge.ActivityFrigo"
            android:parentActivityName="com.mbds.appsmartfridge.ActivityFrigos" />
        <activity android:name="com.mbds.appsmartfridge.ActivityProduit"></activity>
        <activity android:name=".ActivityAddAlerte"></activity>
    </application>

</manifest>